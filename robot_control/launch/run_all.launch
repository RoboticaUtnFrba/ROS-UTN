<launch>

    <arg name="port" default="/dev/ttyACM0" />
    <arg name="baud" default="57600" />

    <include filename="$(find robot_control)/launch/arduino_robot.launch">
        <arg name="port" value="$(arg port)"/>
        <arg name="baud" value="$(arg baud)"/>
    </include>

    <!-- Execute controller node -->
    <node pkg="robot_control" type="robot.py" name="robot_control_node" source="screen" />

</launch>